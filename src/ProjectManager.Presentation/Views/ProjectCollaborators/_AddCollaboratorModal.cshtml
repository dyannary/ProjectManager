@using ProjectManager.Application.DataTransferObjects.ProjectCollaborator;
@model CollaboratorToCreateDto

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add collaborator</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    @using (Ajax.BeginForm("AddCollaborator", "ProjectCollaboratorsController", new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "HandleCreateUpdateCollaborator"
    }, new { enctype = "multipart/form-data", id = "projectForm" }))
    {
        <div class="modal-body">
            @Html.AntiForgeryToken()
                <div class="col mb-2 d-flex justify-content-between align-items-center">
                        <div class="form-horizontal">
                            @Html.Hidden("projectId", (int)ViewBag.ProjectId)


                            <div class="form-group row mb-2 align-items-center">
                                <div class="col-md-5">
                                    @Html.LabelFor(model => model.UserName, "Username:", htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", data_valmsg_for = "UserName" })
                                </div>
                            </div>

                            <div class="form-group row align-items-center">
                                <div class="col-md-5">
                                    @Html.LabelFor(model => model.RoleId, "Role:", htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.RoleId, (SelectList)ViewBag.ProjectUserRoles, new { @class = "form-select dropdown-toggle" })
                                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger", data_valmsg_for = "RoleId" })
                                </div>
                            </div>

                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Add</button>
            </div>
            }
        </div>


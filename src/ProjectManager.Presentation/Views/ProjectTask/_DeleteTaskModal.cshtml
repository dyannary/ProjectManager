@model Int32?

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Confirm disable</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this task?
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="deleteTaskButton" class="btn btn-danger">Delete</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#deleteTaskButton').click(function () {
            var taskId = @Model; 
            $.ajax({
                url: '/ProjectTask/DeleteTasks/' + taskId,
                type: 'POST',
                success: function (response) {
                    if (response.statusCode === 201) {
                       
                        reloadTaskData();
                    } else {
                       
                        console.log('Error deleting task');
                    }
                },
                error: function () {
                    console.log('Error occurred while deleting task');
                }
            });
        });
    });
</script>


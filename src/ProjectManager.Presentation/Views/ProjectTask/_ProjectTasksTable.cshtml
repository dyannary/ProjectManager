@using ProjectManager.Application.DataTransferObjects.ProjectTask;
@model List<ProjectTaskById>

<div class="d-flex justify-content-between align-items-center">
    <table id="ProjecTasksTable" class="table" width="100%" cellspacing="0">
        <thead class="table">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Assigned To</th>
                <th>Type</th>
                <th>State</th>
                <th>Task End Date</th>
                <th>Priority</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.Name</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="avatar mr-5">
                                <img src="@task.PhotoPath" alt="Avatar" class="avatar-img">
                            </div>
                            <div>@task.AssignedTo</div>
                        </div>
                    </td>
                    <td>@task.ProjectTaskType</td>
                    <td>@task.ProjectTaskState</td>
                    <td>@task.TaskEndDate.ToString("dd/MM/yyyy")</td>
                    <td>@task.Priority</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .avatar {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        overflow: hidden;
        margin-right: 10px;
    }

    .avatar-img {
        width: 100%;
        height: auto;
    }
</style>


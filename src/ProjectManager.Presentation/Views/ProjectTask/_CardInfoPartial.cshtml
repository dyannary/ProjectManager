@using ProjectManager.Application.DataTransferObjects.Projects;
@model ProjectByIdForProjectTaskDto

<div id="DetailCard">
    <div class="card-body d-flex justify-content-between">
        <div class="d-flex">
            <div class="col-md-5">
                    <img class="card-img" src="@Url.Content(Model.PhotoPath)" alt="Card image">
            </div>
            <div class="col-md-5 m-3">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
        <div class="d-flex align-items-center m-2">
            <a class="btn btn-outline-dark">Manage users</a>
        </div>
    </div>
</div>
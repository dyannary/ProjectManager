@using ProjectManager.Application.DataTransferObjects.Projects;
@model ProjectByIdForProjectTaskDto

<div id="DetailCard">
    <div class="card-body d-flex justify-content-between">
        <div class="d-flex">
            <div class="col-md-4">
                <img class="card-img img-thumbnail" src="@Url.Content(Model.PhotoPath)" alt="Card image">
            </div>
            <div class="col-md-5 m-3">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>

        <div class="d-flex align-items-top justify-content-between col-md-3 flex-column">
            <div>
                <p class="text-center">Owner: <span class="text-success">@Model.OwnerUserName</span></p>
                <p class="text-center">State: <span class="text-success">@Model.ProjectState</span></p>
                @if (Model.IsDeleted == true)
                {
                    <p class="text-center text-danger">Disabled</p>
                }
            </div>
            @if (Model.LoggedUserRole != "User")
            {
                <a href="@Url.Action("Index", "ProjectCollaborators", new { projectId = Model.Id })" class="btn btn-outline-dark">Manage collaborators</a>
            }
        </div>
    </div>
</div>
@using ProjectManager.Application.DataTransferObjects.ProjectTask;
@model ProjectTaskDto
@{
    ViewBag.Title = "Index";
}
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">

            <p class="mb-0">Product details</p>
            <div class="d-flex">
                <div class="form-group me-2">
                    <div class="col-md-10">
                        @Html.DropDownList("SelectedProject", new SelectList(Model.ProjectsList, "Id", "Name"), new { @class = "form-select dropdown-toggle", onchange = "refreshCard()" })
                    </div>
                </div>
                <div class="col-auto">

                    <a href="@Url.Action("Index", "Project")" class="btn btn-outline-dark">Projects</a>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_CardInfoPartial", Model.Project)
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <table id="ProjecTasksTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Task Start Date</th>
                        <th>Task End Date</th>
                        <th>Type</th>
                        <th>State</th>
                        <th>Project Name</th>
                        <th>Priority</th>
                        <th>Assigned To</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.ProjectTasks)
                    {
                        <tr>
                            <td>@task.Id</td>
                            <td>@task.Name</td>
                            <td>@task.Description</td>
                            <td>@task.TaskStartDate</td>
                            <td>@task.TaskEndDate</td>
                            <td>@task.ProjectTaskType</td>
                            <td>@task.ProjectTaskState</td>
                            <td>@task.ProjectName</td>
                            <td>@task.Priority</td>
                            <td>@task.AssignedTo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function refreshCard() {
            var selectedProject = $("#SelectedProject").val();
            $.ajax({
                url: '@Url.Action("RefreshDetailCard", "ProjectTask")',
                type: 'GET',
                data: { id: selectedProject },
                success: function (result) {
                    debugger;
                    $("#DetailCard").empty();
                    $("#DetailCard").html(result);
                },
                error: function (xhr, status, error) {
                    alert('Error: ' + error);
                }
            });

        }
    </script>
}
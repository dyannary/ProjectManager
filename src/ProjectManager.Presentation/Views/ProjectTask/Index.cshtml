@using ProjectManager.Application.DataTransferObjects.ProjectTask;
@model ProjectTaskDto
@{
    ViewBag.Title = "Index";
}
<div class="card mb-3">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">

            <p class="mb-0">Product details</p>
            <div class="d-flex">
                <div class="form-group me-2">
                    <div class="col-md-10">
                        @Html.DropDownList("SelectedProject", new SelectList(Model.ProjectsList, "Id", "Name"), new { @class = "form-select dropdown-toggle", onchange = "refreshCard()" })
                    </div>
                </div>
                <div class="col-auto">

                    <a href="@Url.Action("Index", "Project")" class="btn btn-outline-dark">Projects</a>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_CardInfoPartial", Model.Project)
</div>

<div class="card">
    <div class="card-header">
        <div id="TasksTable">
            @Html.Partial("_ProjectTasksTable", Model.ProjectTasks)
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function refreshCard() {
            var selectedProject = $("#SelectedProject").val();
            $.ajax({
                url: '@Url.Action("RefreshDetailCard", "ProjectTask")',
                type: 'GET',
                data: { id: selectedProject },
                success: function (result) {
                    $("#DetailCard").empty();
                    $("#DetailCard").html(result);

                    refreshTable(selectedProject);
                },
                error: function (xhr, status, error) {
                    alert('Error: ' + error);
                }
            });
        }

        function refreshTable(selectedProject) {
            $.ajax({
                url: '@Url.Action("RefreshTable", "ProjectTask")',
                type: 'GET',
                data: { id: selectedProject },
                success: function (result) {
                    $("#TasksTable").empty();
                    $("#TasksTable").html(result);
                },
                error: function (xhr, status, error) {
                    alert('Error: ' + error);
                }
            });
        }
    </script>
}